<div class="jumbotron text-center main-background">
	<div class="layer">
		<h1>Mongo Scraper</h1>
		<h3>New York Times Edition</h3>
	</div>
</div>

<div id="saved">
{{#each saved}}
  <div data-id="{{_id}}" class="container text-left newsList">
    <img src="{{image}}" class="picImage">
    <h4>{{title}}</h4>
    <p>{{summary}}</p>
    <a href="{{link}}" target="_blank" class="row">Read More Here</a>
    <form data-id="{{_id}}" class="postComment">
      <div>Post a comment:</div>
      <textarea rows="5" cols="120" id="comment" autofocus="true" maxlength="200"></textarea>
      <input type="submit" id="submit" class="btn-success">
    </form>
    <button class="delete btn-danger">Delete This Article</button>
    <div class="seeComments">Comments: {{comments.length}}</div>
  </div>
{{/each}}
</div>